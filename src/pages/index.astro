---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to my Portfolio">
  <section
    id="hero"
    class="min-h-screen flex flex-col items-center justify-center text-center px-4"
  >
    <h1 class="text-5xl md:text-6xl font-bold mb-4">
      Welcome to my Portfolio
    </h1>
    <p class="text-xl md:text-2xl mb-8">
      You may be wondering who I am… and what I build.
    </p>
    <a
      href="#about"
      class="inline-block bg-primary text-white py-3 px-6 rounded-lg shadow hover:shadow-lg transition"
    >
      Learn More ↓
    </a>
  </section>
</Layout>
