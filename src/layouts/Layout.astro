---
import '../styles/global.css';  // ‚Üê ensures Tailwind + your globals are applied
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- AOS CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css"
      integrity="sha512-Ho+g/Y1R3e1wqn44qP/7Z4oxhc3YgQ0TLhMsYGdnJxicqOgHT34DwRIpfs9CD3W0YcZ7+2z3V/mW8X24Md4UHQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body class="bg-gray-900 text-gray-100 antialiased">
    <slot />

    <!-- AOS JS -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"
      integrity="sha512-G0PT+PXDQyuebRAdcapN8GYYoNEt+wMZJ1CY/BRfqvUHv+vqwoRCL0LlW1yDThOK9L7bFCGep6wb5P2l+XkgAQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script>
      // Initialize AOS after the script loads
      AOS.init({
        once: true,   // animate only once
        offset: 50,   // start trigger 50px before element
      });
    </script>
  </body>
</html>
